{{template "admin" .}}

{{define "page-title"}}
    Reservations Calendar
{{end}}

{{ define "css"}}
<style>
    footer {
        visibility: hidden;
    }
</style>
{{end}}
{{define "content"}}
    {{$now := index .Data "now"}}
    {{$rooms := index .Data "rooms"}}
    {{$dim := index .IntMap "days_in_month"}}
    <div class="col-md-12">
        <div class="text-center">
            <h3>{{formatDate $now "January 2006"}}</h3>
        </div>

        <div class="float-start">
            <a class="btn btn-sm btn-outline-secondary" href="/admin/reservations-calendar?y={{index .StringMap "last_month_year"}}&m={{index .StringMap "last_month"}}">&lt;&lt;</a>
        </div>
        
        <div class="float-end">
            <a class="btn btn-sm btn-outline-secondary" href="/admin/reservations-calendar?y={{index .StringMap "next_month_year"}}&m={{index .StringMap "next_month"}}">&gt;&gt;</a>
        </div>

        <div class="clearfix"></divc>

        </div>
        {{ range $rooms}}
            {{ $roomId := .ID}}

            <h4 class="mt-4">{{.RoomName}}</h4>

            <div class="table-responsive">
                <table class="table table-bordered table-sm">
                    <tr class="table-secondary">
                        {{range $index := iterate $dim}}
                            <td class="text-center p-2">
                                {{$index}}
                            </td>
                        {{ end }}
                    </tr>

                    <tr class="table-light">
                        {{range $index := iterate $dim}}
                            <td class="text-center p-2">
                                <input type="checkbox">
                            </td>
                        {{ end }}
                    </tr>
                </table>
            </div>
        {{ end }}
{{end}}